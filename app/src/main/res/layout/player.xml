<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainPlayerLay143"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >


    <RelativeLayout
        android:id="@+id/layPlayerRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >

    </RelativeLayout>




    <LinearLayout
        android:id="@+id/layBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/seek_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#CC000000"
            >

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/durationTextView"
                android:minHeight="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="2.5dp"
                android:paddingRight="15dp"
                android:paddingBottom="2.5dp"
                android:progressBackgroundTint="#80FFFFFF"
                android:progressTint="#FFFFFF"
                android:thumbTint="#DCDCDC" />

            <TextView
                android:id="@+id/durationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:text="0:00"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CC000000"
            android:orientation="horizontal"
            android:weightSum="120"
            >


            <ImageView
                android:id="@+id/repeat_one"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_weight="20"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="5dp"
                android:src="@drawable/replay_one"
                />

            <ImageView
                android:id="@+id/imgPrevious"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_weight="20"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="5dp"
                android:src="@drawable/prev" />

            <ImageView
                android:id="@+id/imgPlayPause"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_weight="20"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="5dp"
                android:src="@drawable/buffer" />

            <ImageView
                android:id="@+id/imgNext"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_weight="20"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="5dp"
                android:src="@drawable/next" />


            <ImageView
                android:id="@+id/imgFullscreen"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_weight="20"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="5dp"
                android:src="@drawable/icon_fullscreen"
                />

            <ImageView
                android:id="@+id/imngClosePlayer"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_weight="20"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="5dp"
                android:src="@drawable/cross"
                android:tint="@color/purple_500"
                tools:ignore="UseAppTint" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>


